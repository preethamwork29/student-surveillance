# Environment
ENV=development

# Database
DATABASE_URL=postgresql://surveillance:changeme_secure_password@localhost:5432/surveillance_db

# RabbitMQ
RABBITMQ_URL=amqp://surveillance:changeme_secure_password@localhost:5672/

# Redis
REDIS_URL=redis://localhost:6379/0

# CUDA
CUDA_VISIBLE_DEVICES=0

# AI Models
# Use buffalo_l for detection by default in dev to avoid large model download
DETECTION_MODEL=buffalo_l
RECOGNITION_MODEL=buffalo_l
MODEL_CACHE_DIR=./data/models

# Recognition Settings
SIMILARITY_THRESHOLD=0.65
BATCH_SIZE=8
MAX_FACE_SIZE=640

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
